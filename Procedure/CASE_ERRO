CREATE DEFINER=`root`@`localhost` PROCEDURE `Cidadania_clientes`(vCPF VARCHAR(20))
BEGIN
DECLARE vCIDADANIA VARCHAR(15);
DECLARE vLOCAL VARCHAR(30);
DECLARE vERRO VARCHAR(30);
DECLARE CONTINUE HANDLER FOR 1339 SET vERRO = "Bairro n√£o apontado";
SELECT BAIRRO INTO vLOCAL FROM tabela_de_clientes WHERE cpf = vCPF;

	CASE
	WHEN vLOCAL = "Jardins" THEN SET vCIDADANIA = 'Paulista';
	WHEN vLOCAL = "Santo Amaro" THEN SET vCIDADANIA = 'Paulista';
	WHEN vLOCAL = "Bras" THEN SET vCIDADANIA = 'Paulista';
	WHEN vLOCAL = "Tijuca" THEN SET vCIDADANIA = 'Carioca';
	WHEN vLOCAL = "Piedade" THEN SET vCIDADANIA = 'Carioca';
    WHEN vLOCAL = "LAPA" THEN SET vCIDADANIA = 'Duvida';
	END CASE;
    SELECT vCIDADANIA;
SELECT vERRO;
END
